<ul class="nav nav-tabs">
  <li class="active"><a href="#tab1" data-toggle="tab">HOME</a></li>
  <li><a href="#tab2" data-toggle="tab">Management</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane fade in active" id="tab1">
    home画面
  </div>

  <div class="tab-pane fade" id="tab2">
    <div id="content">
      <h1>管理画面</h1>
      <div class="table-responsive col-xs-12">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>日付</th>
	      <th>Title</th>
	      <th colspan="2"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @blogs.each do |blog| %>
		  
	    <tr class="warning">
              <td><%= blog.dating.strftime("%Y年%m月%d日") %></td>
              <td><%= link_to truncate(blog.title, length: 10), blog, class: "link_title" %></td>
              <td><%= link_to '編集', edit_blog_path(blog),class: "btn btn-primary text-muted" %></td>
              <td><%= link_to '削除', blog, method: :delete,data:{ confirm: 'この記事を削除してよろしいですか?'}, class: "btn btn-danger" %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
      </div>
      <div class="col-xs-9">
	<ul class="pagination">
	  <%
	     page_offset = 0
	     if @page_num/4 >= 1 then page_offset = @page_num - 3 end
	  if @page_num == 1 then
	  %>
	  <li class="disabled"><%= link_to 'Prev', :controller => 'blogs' %></li>
	  <% else %>
	  <li><%= link_to 'Prev', :controller => 'blogs', :page => 1 + page_offset %></li>
	  <% end %>
	  <% 
	     i = 1 + page_offset
	     while i <= @page_max+1 && i <= 5 + page_offset do
     	  unless i == @page_num then %>
	    <li><%= link_to i, :controller => 'blogs', :page => i %></li>
          <% else %>
            <li class="disabled"><%= link_to i, :controller => 'blogs' %></li>
          <% end %>
        <% i += 1; end %>
        <% if @page_num == @page_max+1 then %>
          <li class="disabled"><%= link_to 'Next', :controller => 'blogs' %></li>
        <% else %>
          <li><%= link_to 'Next', :controller => 'blogs', :page => i-1 %></li>
        <% end %>
    </ul>

   <%= paginate(@blogs) %>
</div>
<div class="col-xs-3">
  <%= link_to '記事を投稿', new_blog_path, class: "btn btn-primary btn-lg" %>
</div>
</div>
</div>  
</div>
