<div id="home">
  <h1>home画面</h1>
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
	<% @blogs.each do |blog| %>
	<div>
	  <span class="title">
		<%= blog.title %>
	  </span>
	  <span  class="date">
		<%= 
		   blog.dating.strftime("%Y年%m月%d日") 
		   %>
	  </span>
	</div>
	<div class="words">
	  <%== 
		 blog.word.gsub(/[<>&"\r\n]/,
							  "<" => "&lt;", ">" => "&gt;", "&" => "&amp;", '"' => "&quot;", "\n" => "<br />")
	  %>
	</div> 
	<% end %>
  <!-- さらに表示 -->
	<%= paginate(@blogs) %>
  </div>
  <div class="col-xs-2"></div>
</div> 


<% content_for(:management) do %>
<div id="content">
  <h1>管理画面</h1>
  <div class="table-responsive col-xs-12">
	<table class="table table-hover">
	  <thead>
		<tr>
		  <th>日付</th>
		  <th>Title</th>
		  <th colspan="2"></th>
		</tr>
	  </thead>
	  <tbody>
		<% @blogs.each do |blog| %>
		<tr class="warning">
		  <td><%= blog.dating.strftime("%Y年%m月%d日") %></td>
		  <td><%= link_to truncate(blog.title, length: 10), blog, class: "link_title" %></td>
          <td><%= link_to '編集', edit_blog_path(blog),class: "btn btn-primary text-muted" %></td>
          <td><%= link_to '削除', blog, method: :delete,data:{ confirm: 'この記事を削除してよろしいですか?'}, class: "btn btn-danger" %></td>
		</tr>
		<% end %>
	  </tbody>
	</table>
  </div>
  <div class="col-xs-9">
	<%= paginate(@blogs) %>
  </div>
  <div class="col-xs-3">
	<%= link_to '記事を投稿', new_blog_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>
