<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :word, :記事 %><br>
    <%= f.text_area :word, cols: 40, rows: 10 %>
  </div>
  <div class="field">
	<%= label_tag :tag, :Tag %><br>
	<% tags = Tag.where(:id => @blog.tag_ids).pluck(:name).join(",") %>
	<%= text_field_tag :tag, tags %>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: "btn btn-warning" %>
  </div>
<% end %>
