<p id="notice"><%= notice %></p>
<div>
  <span class="title">
	<%= @blog.title %>
  </span>
  <span  class="date">
  <%= 
    @blog.dating.strftime("%Y年%m月%d日") 
  %>
  </span>
</div>
<div class="words">
  <%== 
     @blog.word.gsub(/[<>&"\r\n]/,
			   "<" => "&lt;", ">" => "&gt;", "&" => "&amp;", '"' => "&quot;", "\n" => "<br />")
  %>
</div>
